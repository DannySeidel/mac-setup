alias gi='git init'
alias gcl='git clone'
alias gre='git remote'
alias grea='git remote add origin'

alias gs='git status'
alias gd='fd HEAD'
alias gsw='fd HEAD^ HEAD'
alias ga='git add'
alias gaa='git add .'
alias gc='git commit -m'

alias gl='git lg'
alias glg='git log'
alias gb='git branch'
alias gch='git checkout'

alias gx='git reset --hard'
alias gr='git reset'
alias grs='git reset --soft'
alias grh='git reset --hard'
alias grs1='git reset HEAD~1 --soft'
alias grh1='git reset HEAD~1 --hard'

alias gm='git merge'

alias gsh='git stash'
alias gshp='git stash pop'
alias gshl='git stash list'
alias gshi='git stash info'
alias gshd='git stash drop'
alias gshc='git stash clear'

alias gps='git push'
alias gpss='git push --set-upstream origin'
alias gpl='git pull origin'
